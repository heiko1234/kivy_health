<WorldWindow>:
    name: "worldwindow"

    healing_message:healing_message
    progress_bar:progress_bar
    breath_message:breath_message

    GridLayout:
        cols: 1
        size_hint: (0.7, 0.7)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        ProgressBar:
            id: progress_bar
            line_width: 30
            value: 0
            size_hint: (1.0, 0.2)

        Label:
            id: healing_message
            text: ""
            font_size:28
            size_hint: (0.8, 0.1)

        GridLayout:
            cols: 1
            size_hint: (0.5, 0.4)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Label:
                id: breath_message
                text: ""
                font_size: 32
                size_hint: (1, 1)

        Label:
            id: space_message
            text:""
            size_hint: (0.8, 0.1)


        # MDRoundFlatButton:
        #     # text_color: "white"
        Button:
            text:"Fix my world"
            id: fix_my_world_button
            size_hint: (0.2, 0.2)
            bold: True
            background_color: "#7844E3"
            background_normal: ""
            on_release: 
                root.heal_your_world()


